<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:name=".MindMelterApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.MindMelter"
        tools:targetApi="31">
        <activity
            android:name=".activities.GenerateTriviaActivity"
            android:exported="false" />
        <activity
            android:name=".activities.ChatActivity"
            android:exported="false"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".activities.TriviaActivity"
            android:exported="false" />
        <activity
            android:name=".activities.SettingsPageActivity"
            android:exported="false" />
        <activity
            android:name=".activities.ProfilePageActivity"
            android:exported="false" />
        <activity
            android:name=".activities.authentication.LogInActivity"
            android:exported="false" />
        <activity
            android:name=".activities.authentication.SignUpActivity"
            android:exported="false" />
        <activity
            android:name=".activities.authentication.VerifyAccountActivity"
            android:exported="false" />
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>